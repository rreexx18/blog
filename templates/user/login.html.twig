{% extends 'base.html.twig' %}
{% block error %}{% endblock %}
{% block body %}
    <div class="col-lg-4 box-form">
        <h2>Login</h2>
        <form action="{{ path('app_login') }}" method="post">
            <div class="form-group">
                <input type="text" id="username" name="_username" class="form-control" value="{{ last_username }}" placeholder="Username">
            </div>
            <div class="form-group">
                <input type="password" id="passwd" name="_password" class="form-control" placeholder="Password">
            </div>
            <input type="submit" class="btn btn-success" value="Login">
        </form>
    </div>
{% endblock %}
